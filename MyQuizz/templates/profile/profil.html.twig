{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_index') }}" class="boutons_blue">Admin panel users</a>
        <a href="{{ path('app_categorie_index') }}" class="boutons_blue">Admin panel quizzz</a>
    {% endif %}
    <a href="/" class="boutons_grey">Accueil</a>
    <a href="/user/create/quizz" class="boutons_grey">Créer un quizz</a>

<div class="example-wrapper">
    <h1>Hello {{ user.pseudo }} !</h1>

    <span>Vos informations personnelles :</span>
    <ul>
        <li>Adresse email enregistrée : {{ user.email }}</li>
        <li>Role :
            {% if 'ROLE_ADMIN' in user.roles %}
            Admin
            {% else %}
            Utilisateur
            {% endif %}
        </li>
    </ul>
    <a href="{{ path('app_logout') }}" class="boutons_red">Logout</a>
    <a href="{{ path('app_edit_email') }}" class="boutons_green">Changer l'email</a>
    <a href="{{ path('app_edit_password') }}" class="boutons_green">Changer mot de passe</a>

</div>
{% endblock %}
