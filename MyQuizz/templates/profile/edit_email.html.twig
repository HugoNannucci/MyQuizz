{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_index') }}" class="boutons_blue">Admin panel users</a>
        <a href="{{ path('app_categorie_index') }}" class="boutons_blue">Admin panel quizzz</a>
    {% endif %}
    <a href="/user/profile" class="boutons_grey">Profil</a>
    <a href="/" class="boutons_grey">Accueil</a>
    <a href="/user/create/quizz" class="boutons_grey">Cr√©er un quizz</a>

    <div class="example-wrapper">
        <h1>Hello {{ user.pseudo }} !</h1>

        <span>Changez votre adresse e-mail :</span>
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        <button class="boutons_green">{{ button_label|default('Update') }}</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
