{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ categorie.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ categorie.name }}</td>
        </tr>
        <tr>
            <th>Questions</th>
            <td>{% for key,question in questions %}
                    {{ key+1 }} : {{ question.question }}
                    <br>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Reponses</th>
            <td>{% for key,reponseArray in reponses %}
                    {% for reponse in reponseArray %}
                        {{ key+1 }} : {{ reponse.reponse }}{{ reponse.isReponseExpected ? ', bonne r√©ponse' : '' }}
                        <br>
                    {% endfor %}
                    <br>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="boutons_blue">Editer</a>
    <a href="{{ path('app_categorie_index') }}" class="boutons_grey">Revenir au listing</a>
    <a href="/" class="boutons_grey">Accueil</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
